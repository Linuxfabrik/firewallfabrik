getaddr_internal() {
 dev=$1
 name=$2
 af=$3
 L=$($IP $af addr show dev $dev | sed -n '/inet/{s!.*inet6* !!;s!/.*!!p}' | sed 's/peer.*//')
 test -z "$L" && {
 eval "$name=''"
 return
 }
 eval "${name}_list=\"$L\""
}

getnet_internal() {
 dev=$1
 name=$2
 af=$3
 L=$($IP route list proto kernel | grep $dev | grep -v default | sed 's! .*$!!')
 test -z "$L" && {
 eval "$name=''"
 return
 }
 eval "${name}_list=\"$L\""
}

